{
  "name": "user-mgmt",
  "version": "0.0.1",
  "description": "Microservice for User Authentication and Authorization, User Profile Management, Access Control, and Security Management",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "rimraf ./dist/ && tsc",
    "lint": "eslint .",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "prepare": "husky install"
  },
  "keywords": [
    "User Management",
    "Microservice",
    "Event-Driven Architecture",
    "Authentication",
    "Authorization",
    "Access Control",
    "Security",
    "User Registration",
    "User Authentication",
    "User Profile Management",
    "Token Management",
    "User Access Control",
    "Audit Logging",
    "Role-Based Access Control",
    "Permission-Based Access Control",
    "Multi-Factor Authentication",
    "OAuth2",
    "OpenID Connect",
    "JWT"
  ],
  "author": "Eric Oliveira",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "git-commit-msg-linter": "^4.9.4",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  }
}
